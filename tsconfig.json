{
  "compilerOptions": {
    "outDir": "tsbuild",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2021", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
        "@components": ["./components/index"],
        "@utils": ["./utils"],
        "@constants": ["./constants/index"],
        "@mock/*": ["../mock/*"]
    }
  },
  "exclude": ["node_modules"]
}